{
  "name": "xhs-cli",
  "version": "1.0.0",
  "description": "面向个人创作者的小红书 CLI 工具和 MCP 服务器 - 帮助创作者管理、分析和发布小红书内容",
  "type": "module",
  "main": "dist/mcp/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "xhs": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "postpublish": "git checkout README.md",
    "xhs": "tsx src/cli.ts",
    "start": "node dist/mcp/index.js",
    "setup": "tsx src/scripts/setup_mcp.ts",
    "setup:claude": "tsx src/scripts/setup_mcp.ts --claude",
    "setup:cursor": "tsx src/scripts/setup_mcp.ts --cursor",
    "setup:all": "tsx src/scripts/setup_mcp.ts --all",
    "test": "tsx src/test/_test.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "xiaohongshu",
    "xhs",
    "小红书",
    "content-creator",
    "social-media",
    "automation",
    "cli",
    "crawler"
  ],
  "author": "Joo <1546635571@qq.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joohw/xhs-cli.git"
  },
  "bugs": {
    "url": "https://github.com/joohw/xhs-cli/issues"
  },
  "homepage": "https://github.com/joohw/xhs-cli#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "jsqr": "^1.4.0",
    "pngjs": "^7.0.0",
    "puppeteer": "^24.28.0",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/qrcode-terminal": "^0.12.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}